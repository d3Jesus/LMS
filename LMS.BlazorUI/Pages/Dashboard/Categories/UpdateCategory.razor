@page "/categories/update/{categoryId:int}"
@layout DashboardLayout

<div class="pagetitle">
    <h1>Update Category</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <NavLink href="dashboard">
                    Dashboard
                </NavLink>
            </li>
            <li class="breadcrumb-item">
                <NavLink href="categories">
                    Categories
                </NavLink>
            </li>
            <li class="breadcrumb-item active">Update Category</li>
        </ol>
    </nav>
</div>

@if(responseMessage is not null)
{
    if(responseStatus)
    {
        <AlertComponent alertMessage="@responseMessage" alertType="success" />
    } else
    {
        <AlertComponent alertMessage="@responseMessage" alertType="danger" />
    }
}

<EditForm Model="@category" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />

    <CardComponent title="New Author">
        <bodyFragment>
            <div class="form-group">
                <input type="text" class="form-control" id="name"
                    placeholder="Category Name" autocomplete="off"
                    @bind-value="category.CategoryName">
            </div>
        </bodyFragment>
        <footerFragment>
            <a class="btn btn-outline-secondary @IsDisabled" href="/authors">
                Cancel
            </a>
            <button type="submit" class="btn btn-outline-success @IsDisabled">
                <i class="bi bi-save"></i> Update
            </button>
        </footerFragment>
    </CardComponent>
</EditForm>
