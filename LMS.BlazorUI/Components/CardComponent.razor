
<div class="card">
    <div class="card-body">
        <h5 class="card-title">@title</h5>
        @bodyFragment
    </div>
    <div class="card-footer">
       @footerFragment
    </div>
</div>


@code {
    [Parameter]
    public string title { get; set; }

    [Parameter]
    public RenderFragment bodyFragment { get; set; }
    [Parameter]
    public RenderFragment footerFragment { get; set; }
}
