
<div class="@cssClass">
    <div class="card mb-4 product-wap rounded-0">
        <div class="card rounded-0">
            <img class="card-img rounded-0" src="@book.ImageUrl" alt="@book.Title" width="500" height="280">
            <div class="card-img-overlay rounded-0 product-overlay d-flex align-items-center justify-content-center">
                <ul class="list-unstyled">
                    <li><a class="btn btn-success text-white mt-2" href="shop/@book.Id"><i class="far fa-eye"></i></a></li>
                    @*<li><a class="btn btn-success text-white mt-2" href="shop-single.html"><i class="fas fa-cart-plus"></i></a></li>*@
                </ul>
            </div>
        </div>
        <div class="card-body">
            <a href="shop-single.html" class="h3 text-decoration-none">@book.Title</a>
            <p class="text-center mb-0">@book.Price</p>
        </div>
    </div>
</div>
@code {
    [Parameter]
    public Book book { get; set; }
    [Parameter]
    public string cssClass { get; set; }
}
